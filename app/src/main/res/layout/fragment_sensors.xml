<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.r173059004.RecordSensorData.SensorsFragment">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="android.r173059004.RecordSensorData.SensorsActivity">


        <RadioGroup
            android:id="@+id/acc_sensor"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="120dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/et_acc_sensor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Accelerometer"
                android:textSize="30sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/accelerometer_button"
                android:layout_width="14dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/gps_sensor"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/acc_sensor">

            <TextView
                android:id="@+id/et_gps_sensor"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="GPS"
                android:textSize="30sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/gps_button"
                android:layout_width="14dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1" />
        </RadioGroup>

    </android.support.constraint.ConstraintLayout>


</FrameLayout>
